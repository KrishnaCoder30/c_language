#include <stdio.h>
#include <string.h>

int main ()
{
    char a[10000];
    int i,n=1;
    printf("Input String :-");
    gets(a);
    for( i=0 ; a[i]!= '\0' ; i++)
    {
        if(a[i]==' ' || a[i]== '\t' || a[i] == '\n')
        {
            n++;
        }
    }
    printf( "\nNo. Of Words In String are :- %d"  , n );
}

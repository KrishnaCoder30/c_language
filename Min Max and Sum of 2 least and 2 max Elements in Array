#include <stdio.h>

 

int main()

{

 int a[100];

 int i,j,k,n;

 scanf("%d",&n);

 printf("No. of Elements in Array : %d",n);

 

 for(i=0;i<n;i++)

 {

 	scanf("%d",&a[i]); 	printf("\nElement in Array-%d : %d",i,a[i]);

 	}

 	printf("\n\nElements in Array in Descending order :");

 		printf("\n\n");

 		for(j=0;j<n;j++)

 		{

 		for(i=0;i<n;i++)

  {

 				if(a[i]<=a[i+1])

 				{

 					k=a[i+1];

 					a[i+1]=a[i];

 					a[i]=k;

 					}

 					}

 					}

 					for(j=0;j<n;j++)

 					{

 						printf(" %d\t   ",a[j]);

 						}

 						printf("\nMax Element : %d ",a[0]);

 						printf("\nMin Element : %d ",a[n-1]);

 						printf("\nSum of two Least Element in Array is : %d",a[n-1]+ a[n-2]);

 						printf("\nSum of two Greatest Element in Array is : %d",a[0]+ a[1]);

 						 				}

 				

 				

 
